{
	"name": "xspattern",
	"version": "1.1.0",
	"description": "XML Schema pattern (regular expression) matcher",
	"author": "Stef Busking",
	"license": "MIT",
	"keywords": [
		"xml",
		"schema",
		"pattern",
		"xs:pattern"
	],
	"main": "dist/xspattern.js",
	"module": "dist/xspattern.mjs",
	"scripts": {
		"build:clean": "rimraf dist && rimraf lib && rimraf src/generated",
		"build:dirs": "mkdirp lib src/generated",
		"build:unicodedata": "node scripts/buildUnicodeDb.js",
		"build:bundle": "tsc -P tsconfig.build.json && rollup -c",
		"build": "npm-run-all build:clean build:dirs build:unicodedata build:bundle",
		"prepare": "npm run build",
		"test": "jest --coverage --verbose"
	},
	"files": [
		"dist"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/bwrrp/xspattern.js"
	},
	"dependencies": {
		"prsc": "^1.1.0",
		"whynot": "^3.0.3"
	},
	"devDependencies": {
		"@types/jest": "^25.1.4",
		"fontoxpath": "^3.11.1",
		"jest": "^25.1.0",
		"mkdirp": "^1.0.3",
		"npm-run-all": "^4.1.5",
		"prettier": "^1.19.1",
		"rimraf": "^3.0.2",
		"rollup": "^2.0.6",
		"rollup-plugin-commonjs": "^10.1.0",
		"rollup-plugin-json": "^4.0.0",
		"rollup-plugin-node-resolve": "^5.2.0",
		"rollup-plugin-sourcemaps": "^0.5.0",
		"rollup-plugin-terser": "^5.3.0",
		"slimdom-sax-parser": "^1.3.0",
		"ts-jest": "^25.2.1",
		"ts-node": "^8.6.2",
		"typescript": "^3.8.3"
	},
	"jest": {
		"transform": {
			"^.+\\.tsx?$": "ts-jest"
		},
		"testRegex": "(\\.(tests))\\.(tsx?|jsx?)$",
		"moduleFileExtensions": [
			"ts",
			"tsx",
			"js",
			"json",
			"jsx"
		],
		"collectCoverageFrom": [
			"src/**/*.ts"
		]
	},
	"prettier": {
		"printWidth": 100,
		"singleQuote": true,
		"tabWidth": 4,
		"useTabs": true
	}
}
